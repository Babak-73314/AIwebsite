@page "/ContactUs"
@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SfResources> Localizer

@*<p class="lead">@Localizer["ContactUsPage"]</p>*@

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center">@Localizer["ContactUsPage1"]</h1>
                    <p class="card-text text-center">@Localizer["ContactUsPage"]</p>
                    <div class="row mt-5 mb-3">
                        <div class="text-center">
                            <h5><strong>Email:</strong></h5>
                            <p><a href="mailto:info@yazilimai.com.tr">info@yazilimai.com.tr</a></p>
                        </div>
                        @*<div class="col-md-6 text-center">
                            <h5><strong>Phone:</strong></h5>
                            <p><a href="tel:+123456789">+123456789</a></p>
                        </div>*@
                    </div>
                    <form @onsubmit="SubmitForm">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" @bind="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" @bind="email">
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea class="form-control" id="message" @bind="message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    private string name;
    private string email;
    private string message;

    private void SubmitForm()
    {
        // Here you can handle form submission, like sending the data to an API.
        Console.WriteLine($"Name: {name}, Email: {email}, Message: {message}");
    }
}
