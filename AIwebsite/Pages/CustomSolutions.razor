            </div>
        </div>
    </div>

    <!-- Second Section -->
    <div class="row mt-4 align-items-center flex-column-reverse flex-lg-row">
        <div class="col-lg-4">
            <img class="img-fluid" src="images/software_development_process.png" alt="Image depicting the software development process" />
        </div>
        <div class="col-lg-8">
            <h2>@Localizer["CustomSolutionsPage5"]</h2>
            <p>@Localizer["CustomSolutionsPage6"]</p>
            <p>@Localizer["CustomSolutionsPage7"]</p>
            <p>@Localizer["CustomSolutionsPage8"]</p>
        </div>
    </div>

    <div class="row mt-4 text-center">
        <div class="col-lg-8 mx-auto">
            <h2>@Localizer["CustomSolutionsPage9"]</h2>
            <p>@Localizer["CustomSolutionsPage10"]</p>
        </div>
    </div>

    <!-- The following section can have images/logos representing your skills. -->
    <div class="row mt-4 justify-content-center">
        <div class="col-lg-4 col-md-6 text-center mb-4">
            <img class="img-fluid" src="images/cloud_computing.jpg" alt="Image representing cloud computing" />
        </div>
        <div class="col-lg-4 col-md-6 text-center mb-4">
            <img class="img-fluid" src="images/programming_languages.png" alt="Image representing programming languages" />
        </div>
        <div class="col-lg-4 col-md-6 text-center mb-4">
            <img class="img-fluid" src="images/Artificial-Intelligence-Technology.jpg" alt="Image representing AI technologies" />
        </div>
    </div>
</div>


