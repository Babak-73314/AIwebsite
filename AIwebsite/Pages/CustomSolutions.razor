<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">@Localizer["CustomSolutionsPage"]</h1>
        </div>
    </div>

    <!-- First Section -->
    <div class="row mt-4">
        <div class="col-lg-8">
            <div class="content-box h-100">
                <h2>@Localizer["CustomSolutionsPage1"]</h2>
                <p class="text-justify">@Localizer["CustomSolutionsPage2"]</p>
                <p class="text-justify">@Localizer["CustomSolutionsPage3"]</p>
                <p class="text-justify">@Localizer["CustomSolutionsPage4"]</p>
            </div>
        </div>
        <div class="col-lg-4">
